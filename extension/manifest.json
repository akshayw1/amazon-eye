{
  "manifest_version": 3,
  "name": "Amazon Eye",
  "version": "1.0",
  "description": "Get detailed trust scores and product information for Amazon products",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*", "*://*.amazon.in/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 